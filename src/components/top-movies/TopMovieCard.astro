---
interface Props {
  title: string;
  director: string;
  date: string;
  image: string;
}

const { title, director, date, image } = Astro.props as Props;
---
<article class="flex flex-row gap-2 h-full items-center">
    <div class="min-h-[300px] aspect-[9/16] object-fill">
      <img
        src={image}
        alt={title}
        class="aspect-[9/16] object-contain max-h-[300px]"
      />
    </div>
    <div class="flex flex-col gap-2">
      <h3 class="font-bold text-xl">{title}</h3>
  
      <p class="text-sm text-gray-500">{date}</p>
  
    </div>
  </article>